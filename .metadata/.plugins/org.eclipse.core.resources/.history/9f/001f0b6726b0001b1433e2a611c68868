	   Produto p2 = new Produto(2,"INATIVO","IPHONE",5,50,LocalDate.now(),LocalDate.now());
	}
	
	//Encontra uma posição está vazia
    public int verificaPosicao(){
        
        for ( int i = 0; i < produto.length; i++){
            if( produtos[i] == null){
                return i;
            }
            contador++;
        }
        
        return -1;
    }
    
    
    
	

